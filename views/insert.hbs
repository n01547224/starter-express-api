    <h1>Insert Invoice</h1>

    <form action="/api/invoice" method="POST">

        <label for="invoiceID">Invoice ID:</label>
        <input type="text" id="invoiceID" name="invoiceID" value="{{invoice.invoiceID}}" required><br>

        <label for="branch">Branch:</label>
        <input type="text" id="branch" name="branch" value="{{invoice.branch}}"><br>

        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{invoice.city}}"><br>

        <label for="customerType">Customer Type:</label>
        <input type="text" id="customerType" name="customerType" value="{{invoice.customerType}}"><br>

        <label for="productLine">Product Line:</label>
        <input type="text" id="productLine" name="productLine" value="{{invoice.productLine}}"><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{invoice.name}}"><br>

        <label for="image">Image URL:</label>
        <input type="text" id="image" name="image" value="{{invoice.image}}"><br>

        <label for="unitPrice">Unit Price:</label>
        <input type="number" id="unitPrice" name="unitPrice" value="{{invoice.unitPrice}}"><br>

        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="{{invoice.quantity}}"><br>

        <label for="tax">Tax 5%:</label>
        <input type="number" id="tax" name="tax" value="{{invoice.tax}}"><br>

        <label for="total">Total:</label>
        <input type="number" id="total" name="total" value="{{invoice.total}}"><br>

        <label for="date">Date:</label>
        <input type="text" id="date" name="date" value="{{invoice.date}}"><br>

        <label for="time">Time:</label>
        <input type="text" id="time" name="time" value="{{invoice.time}}"><br>

        <label for="payment">Payment:</label>
        <input type="text" id="payment" name="payment" value="{{invoice.payment}}"><br>

        <label for="cogs">COGS:</label>
        <input type="number" id="cogs" name="cogs" value="{{invoice.cogs}}"><br>

        <label for="grossIncome">Gross Income:</label>
        <input type="number" id="grossIncome" name="grossIncome" value="{{invoice.grossIncome}}"><br>

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" value="{{invoice.rating}}"><br>

        <button type="submit">Insert Invoice</button>
    </form>